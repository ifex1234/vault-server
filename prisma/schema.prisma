generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  firstName String
  lastName  String
  password  String
  pin       String
  // customers Customer[]
}

model Customer {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String?   @unique
  address   String?
  firstName String
  lastName String
  otherName String
  customerAddress String?
  customerBusinessAddress String?
  phoneNumber Int? @unique
  BVN Int? @unique  
  NIN Int? @unique
  customerDOB DateTime?
  utilityBillUrl String?
  identificationUrl String?
  creatorEmail String?
  // user      User?     @relation(fields: [userId], references: [id])
  // userId    Int?
}
